                <li>
                    <a href="/Work-with-Us" style="padding-right: 0;">Work with Us</a>
                </li>
            </ul>
        </nav>
    </div>
</section>

<!-- BANNER -->
<div class="banner" style="background: url('<%= banner %>');">
    <div class="banner_content">
        <div class="banner_link">
            <a href="/">Home</a> > <a href="/Work-with-Us">Work with Us</a>
        </div>

        <div class="banner_text">
            Work with Us
        </div>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="main_content">
    <!-- PARTNERSHIP -->
    <div class="partnership">
        <div class="box">
            <div class="content">
                <div class="text">
                    Partnership
                </div>
                <div class="image">
                    <img src="/images/Partnership.png">
                </div>
            </div>
        </div>
    </div>

    <!-- CONTACT US -->
    <div class="contact">
        <!-- TEXT -->
        <div class="text">
            <div class="contact_us">
                Contact Us
            </div>
            <div class="slogan">
                When nothing is sure, everything is possible
            </div>
            <div class="info">
                Please, contact JHSUSTAIN at the address and number below. Otherwise, fill out the “Send us a message” form, which will direct your query to the relevant person in charge.
                <br/>
                Communication: office@jhsustain.com     Tel: 070-5178-6969
            </div>
        </div>

        <!-- MAP & FORM-->
        <div class="map_form">
            <!-- MAP -->
            <div class="map">
                <!-- * 카카오맵 - 지도퍼가기 -->
                <!-- 1. 지도 노드 -->
                <div id="daumRoughmapContainer1593425699055" class="root_daum_roughmap root_daum_roughmap_landing"></div>

                <!--
                    2. 설치 스크립트
                    * 지도 퍼가기 서비스를 2개 이상 넣을 경우, 설치 스크립트는 하나만 삽입합니다.
                -->
                <script charset="UTF-8" class="daum_roughmap_loader_script" src="https://ssl.daumcdn.net/dmaps/map_js_init/roughmapLoader.js"></script>

                <!-- 3. 실행 스크립트 -->
                <script charset="UTF-8">
                    new daum.roughmap.Lander({
                        "timestamp" : "1593425699055",
                        "key" : "yyt6",
                        "mapWidth" : "580",
                        "mapHeight" : "550"
                    }).render();
                </script>
            </div>

            <!-- FORM -->
            <div class="form">
                <!-- TODO: Form action 추가 -->
                <form method="post" action="/">
                    <!-- NAME -->
                    <div class="forms" style="margin-top: 0;">
                        <span>
                            Name
                        </span>
                        <input type="text">
                    </div>
                    <!-- EMAIL -->
                    <div class="forms">
                        <span>
                            Email
                        </span>
                        <input type="text">
                    </div>
                    <!-- MESSAGE -->
                    <div class="forms" style="height: 206px;">
                        <span>
                            Message
                        </span>
                        <input type="text" style="height: 160px;">
                    </div>

                    <div class="button">
                        <button>Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- FOOTER -->
<footer style="width: 100%; height: 300px; background-color: #184C4E">
    <div style="width: 1180px; margin-left: 370px; display: flex; align-items: center">
        <!-- TODO: 로고 -480px-> 글씨 -->
        <!-- LOGO -->
        <div style="display: flex; flex-direction: column; width: 202px;">
            <img src="/images/logo/JHSUSTAIN_WHITE_LOGO.png" class="footer_logo_image">
            <img src="/images/logo/JHSUSTAIN_WHITE_COMPANY_LOGO.png" class="footer_logo_letter">
        </div>

        <!-- PAGES  -->
        <!-- TODO: 위치 맞추기..... -->
        <div style="display: flex; flex-direction: column; padding-left: 478px;">
            <ul style="list-style: none;">
                <li style="color: white; font-size: 20px; font-weight: bold; padding-bottom: .2rem;">
                    <a href="#" style="color: white">Our Team</a>
                </li>
                <li style="color: white; font-size: 20px; font-weight: bold; padding-bottom: .2rem;">
                    <a href="#" style="color: white">Our Work</a>
                </li>
                <li style="color: white; font-size: 20px; font-weight: bold; padding-bottom: .2rem;">
                    <a href="#" style="color: white">In the News</a>
                </li>
                <li style="color: white; font-size: 20px; font-weight: bold; padding-bottom: .2rem;">
                    <a href="#" style="color: white">Work with Us</a>
                </li>
            </ul>
        </div>

        <!-- CONNECT -->
        <div>
        </div>
    </div>
</footer>

</body>
</html>
