<!-- MAIN CONTENT -->
<div class="main_content">
    <div class="box">
        <!-- SORT -->
        <div class="sort">
            <div class="container">
                <button class="btn"><span>Sort</span><img src="/images/project/angle-down.png" />
                    <ul class="dropdown">
                        <li class="active"><a href="#">Sort by Last</a></li>
                        <li><a href="#">Sort by Recent</a></li>
                    </ul>
                </button>
            </div>
        </div>
        <!-- CONTENT -->
        <div class="project">
            <%
            const length = Object.keys(projectList).length;
            for (let i = 1; i < length + 1; i++) {
            %>
                <div class="content" onclick="location.href='/projects/<%= projectList[i].project_id %>'" style="cursor: pointer;">
                    <!-- IMAGE -->
                    <div class="image">
                        <img src="<%= projectList[i].project_image %>">
                    </div>

                    <!-- TEXT -->
                    <div class="text">
                    <div class="box">
                        <div class="title">
                            <%= projectList[i].project_title %>
                        </div>
                        <div class="summary">
                            <%= projectList[i].project_summary %>
                        </div>
                    </div>

                    <!-- BUTTON -->
                    <button class="button">
                        Read more <img src="images/button_arrow.png">
                    </button>
                </div>
                </div>
            <%
            }
            %>
        </div>

        <div>
        </div>
    </div>
</div>

